{
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strictNullChecks": true,
        "outDir": "./release",
        "target": "es2017",
        "lib": [
            "es2017"
        ]
    },
    "typeRoots": [
        "node_modules/@types"
    ],
    "include": [
        "src/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}
